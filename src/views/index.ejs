<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos estão abaixo</p>

      <%- include('includes/messages') %>

      <% if(contatos.length > 0) { %>
      <div class="responsive-table">
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col" class="text-center">Nome</th>
              <th scope="col" class="text-center">Sobrenome</th>
              <th scope="col" class="text-center">Email</th>
              <th scope="col" class="text-center">Telefone</th>
             <% if(user) {%>
              <th colspan="2" class="text-center">Editar</th>
              <%}%>
            </tr>
          </thead>
          <% contatos.forEach(contato => { %>
            <tbody>
          <tr>
            <td class="text-center"><%= contato.nome %></td>
            <td class="text-center"><%= contato.sobrenome %></td>
            <td class="text-center"><%= contato.telefone %></td>
            <td class="text-center"><%= contato.email %></td>
            <% if(user) {%>
            <td class="text-center"><a href="/contato/index/<%= contato._id %>">Alterar</a></td>
            <td class="text-center"><a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a></td>
            <%}%>
          </tr>
        </tbody>
          <% }); %>
        </table>
      </div>
      <% } else { %>
        <p class="text-center lead">Não existem contatos na sua agenda.</p>
      <% } %>

    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>